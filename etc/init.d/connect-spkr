description="Connects Bluetooth speaker for MPD"

name="Bluetooth speaker connection"
command="/usr/local/bin/connect-spkr"
pidfile="/run/$RC_SVCNAME.pid"

depend() {
	use bluealsa
	after mpd
	before tiny-radiocd
}

