# check License at project home https://github.com/macmpi/tiny-radioCD


description="Setup BT and Wifi settings for tiny-radioCD"

name="easy-setup for tiny-radioCD"
command="/usr/local/bin/easy-setup"
pidfile="/run/$RC_SVCNAME.pid"

depend() {
	use bluealsa
	before sshd
	before dropbear
	before inotifyd
	before mpd
	before acpid
	before connect-spkr
	before monitor-spkr
}

