description="Manages incoming bluetooth speaker connections"

name=$RC_SVCNAME
command="/usr/local/bin/monitor-spkr"
pidfile="/run/$RC_SVCNAME.pid"
command_background="yes"

depend() {
	use bluealsa
	use mpd
}

